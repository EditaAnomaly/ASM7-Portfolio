<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/palegreen"
    tools:context=".GemChest">

    <ImageView
        android:id="@+id/gem1_iv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/gem4_iv"
        app:layout_constraintEnd_toStartOf="@+id/gem2_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gem_collection"
        app:srcCompat="@drawable/gem_slot" />

    <ImageView
        android:id="@+id/gem4_iv"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/gem7_iv"
        app:layout_constraintEnd_toStartOf="@+id/gem5_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gem1_iv"
        app:srcCompat="@drawable/gem_slot" />

    <ImageView
        android:id="@+id/gem7_iv"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/gem10_iv"
        app:layout_constraintEnd_toStartOf="@+id/gem8_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gem4_iv"
        app:srcCompat="@drawable/gem_slot" />

    <ImageView
        android:id="@+id/gem8_iv"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/gem10_iv"
        app:layout_constraintEnd_toStartOf="@+id/gem9_iv"
        app:layout_constraintStart_toEndOf="@+id/gem7_iv"
        app:layout_constraintTop_toBottomOf="@+id/gem5_iv"
        app:srcCompat="@drawable/gem_slot" />

    <ImageView
        android:id="@+id/gem9_iv"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/gem10_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/gem8_iv"
        app:layout_constraintTop_toBottomOf="@+id/gem6_iv"
        app:srcCompat="@drawable/gem_slot" />

    <ImageView
        android:id="@+id/gem10_iv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gem8_iv"
        app:srcCompat="@drawable/gem_slot" />

    <ImageView
        android:id="@+id/gem2_iv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toTopOf="@+id/gem5_iv"
        app:layout_constraintEnd_toStartOf="@+id/gem3_iv"
        app:layout_constraintStart_toEndOf="@+id/gem1_iv"
        app:layout_constraintTop_toBottomOf="@+id/gem_collection"
        app:srcCompat="@drawable/gem_slot" />

    <ImageView
        android:id="@+id/gem5_iv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/gem8_iv"
        app:layout_constraintEnd_toStartOf="@+id/gem6_iv"
        app:layout_constraintStart_toEndOf="@+id/gem4_iv"
        app:layout_constraintTop_toBottomOf="@+id/gem2_iv"
        app:srcCompat="@drawable/gem_slot" />

    <ImageView
        android:id="@+id/gem3_iv"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/gem6_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/gem2_iv"
        app:layout_constraintTop_toBottomOf="@+id/gem_collection"
        app:srcCompat="@drawable/gem_slot" />

    <ImageView
        android:id="@+id/gem6_iv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/gem9_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/gem5_iv"
        app:layout_constraintTop_toBottomOf="@+id/gem3_iv"
        app:srcCompat="@drawable/gem_slot" />

    <TextView
        android:id="@+id/gem_collection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Space Gem Collection"
        android:textAlignment="center"
        android:textColor="@color/brown"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/gem2_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/gem_memory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/common_google_signin_btn_icon_dark_normal_background"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gem_collection" />

</androidx.constraintlayout.widget.ConstraintLayout>